<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarContent.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="ToolbarPopup.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="popupMenuStyle">@style/PopupMenu.White</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="PopupMenu.White" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
