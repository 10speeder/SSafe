<resources>

    <!-- Toolbar text/icons = black -->
    <style name="ToolbarContent.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@android:color/black</item>   <!-- icons -->
        <item name="android:textColorPrimary">@android:color/black</item>  <!-- title -->
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <!-- Overflow popup = white bg, black text/icons -->
    <style name="ToolbarPopup.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="popupMenuStyle">@style/PopupMenu.White</item>
        <item name="android:textColorPrimary">@android:color/black</item> <!-- <-- fixed -->
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="PopupMenu.White" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
